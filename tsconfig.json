{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile":  "./buildcache",
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2018.promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@frontend/core": ["libs/core/src/index.ts"],
      "@frontend/form": ["libs/form/src/index.ts"],
      "@frontend/form-bootstrap": ["libs/form-bootstrap/src/index.ts"],
      "@frontend/template-utils": ["libs/template-utils/src/index.ts"],
      "@frontend/bootstrap-wrapper": ["libs/bootstrap-wrapper/src/index.ts"],
      "@frontend/material-wrapper": ["libs/material-wrapper/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
